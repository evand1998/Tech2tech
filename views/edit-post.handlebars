<article>
    <h2>
        Comment on this Post
    </h2>
    <form class="edit-post-form">
        <div>
            <input name="post-title" type="text" value="{{post.title}}" />
        </div>
        <div>
            Your post {{format_date post.created.at}}
            {{post.comments.length}} {{format_plural "comment" post.comments.length}}
        </div>
        <div>
            <label for="post-text">Post</label>
            <textarea id="post-text" name="post-text">{{post.post_text}}</textarea>
        </div>
        <button type="submit">Save</button>
        <button type="button" class="delete-post-btn">Delete</button>
    </form>
</article>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>